<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- hr.department inherited -->
    <record id="view_department_form_inherited" model="ir.ui.view">
      <field name="name">hr.department.form</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='parent_id']" position="after">
          <field name="operating_unit_id" widget="selection" required="True" />
        </xpath>
      </field>
    </record>

    <!-- Employee inherited-->
    <record id="view_employee_form_inherited" model="ir.ui.view">
      <field name="name">hr.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='active_group']" position="after">
          <group string='Duration of Service' name="duration_of_service">
            <field name="official_date_of_employment" />
            <field name="temporary_contract" />
            <field name="end_date_of_employment" />
            <field name="lengt_of_service" />
          </group>
          <group string='Leaves' name="leaves">
            <field name="parttime" />
            <field name="allocated_leaves" />
          </group>
        </xpath>
        <field name="calendar_id" position="after">
          <field name="external"/>
          <field name="supplier" attrs="{'invisible': [('external', '=', False)]}"/>
          <field name="mentor_id"/>
        </field>
        <xpath expr="//field[@name='address_home_id']" position="after">
          <field name="emergency_contact" />
        </xpath>
        <xpath expr="//page[@name='hr_settings']" position="after">
          <page string="Description" name="description">
            <field name="description" placeholder="Description..." />
          </page>
        </xpath>
        <xpath expr="//field[@name='user_id']" position="after">
          <field name="pass_number_alarm" />
        </xpath>
      </field>
    </record>

  </data>
</odoo>