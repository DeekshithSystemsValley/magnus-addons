<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task -->
        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <page name="description_page" position="before">
                    <page name="users" string="Fee Earners">
                        <group colspan="4" col="2">
                            <field name="task_user_ids" >
                                    <tree string="Fee Earners" create="true"
                                          edit="true" delete="true" copy="false">
                                        <field name="user_id" />
                                        <field name="product_id"/>
                                        <field name="fee_rate"/>
                                    </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>


        <record id="view_task_form2_inherited_invoice" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']/tree/field[@name='unit_amount']" position="after">
                    <field name="state"/>
                </xpath>
                <xpath expr="//field[@name='planned_hours']" position="after">
                    <field name="correction_charge"/>
                </xpath>
                <xpath expr="//field[@name='progress']" position="after">
                    <field name="chargeable"/>
                </xpath>
                <xpath expr="//page[@name='description_page']" position="after">
                    <page name="invocing_tab" string="Invoicing Tab">
                        <group col="4">
                            <field name="invoice_properties" options="{'no_create_edit': True}"/>
                            <field name="standby"/>
                            <field name="outof_office_hours_week"/>
                            <field name="outof_office_hours_weekend"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Project -->
        <record id="edit_project_magnus" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <xpath expr="//h1" position="replace">
                    <label for="code" class="oe_edit_only" string="Project Code and Name"/>
                    <h3>
                        <group col="3">
                            <field name="code" class="oe_inline" placeholder="Project Code" nolabel="1"/>
                            <span class="oe_inline">-</span>
                            <field name="name" class="oe_inline" placeholder="Project Name" nolabel="1"/>
                        </group>
                    </h3>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="tag_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                    <field name="po_number"/>
                </xpath>
            </field>
        </record>

        <record id="view_project_project_filter_magnus" model="ir.ui.view">
            <field name="name">project.project.search</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="code" string="Project Code"/>
                </xpath>
            </field>
        </record>

        <record id="view_project_magnus" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="code" string="Project Code"/>
                </xpath>
            </field>
        </record>

        <record id="view_project_kanban_magnus" model="ir.ui.view">
            <field name="name">project.project.Kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="code" string="Project Code"/>
                </xpath>
                <xpath expr="//div[@class='o_primary']" position="replace">
                    <div class="o_primary">
                        <span><t t-esc="record.code.value"/><t t-if="record.code.value">-</t><t t-esc="record.name.value"/></span>
                    </div>
                </xpath>
            </field>
        </record>


