        <!-- Invoicing Type -->
        <record model="ir.ui.view" id="project_invoicing_type_search_view">
            <field name="name">Invoicing Type</field>
            <field name="model">project.invoicing.type</field>
            <field name="arch" type="xml">
                <search string="Invoicing Type">
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="project_invoicing_type_form_view">
            <field name="name">Invoicing Type</field>
            <field name="model">project.invoicing.type</field>
            <field name="arch" type="xml">
                <form string="Invoicing Type">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="project_invoicing_type_action" model="ir.actions.act_window">
            <field name="name">Invoicing Type</field>
            <field name="res_model">project.invoicing.type</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new project invoicing type.
              </p>
            </field>
        </record>

        <!-- Invoicing Period -->
