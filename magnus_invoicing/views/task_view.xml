<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task -->
        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <page name="description_page" position="before">
                    <page name="users" string="Fee Earners">
                        <group colspan="4" col="2">
                            <field name="task_user_ids" >
                                    <tree string="Fee Earners" create="true"
                                          edit="true" delete="true" copy="false">
                                        <field name="user_id" />
                                        <field name="product_id"/>
                                        <field name="fee_rate"/>
                                    </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>


        <record id="view_task_form2_inherited_invoice" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']/tree/field[@name='unit_amount']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <!-- Project -->
        <record id="edit_project_magnus" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <xpath expr="//h1" position="replace">
                    <label for="code" class="oe_edit_only" string="Project Code and Name"/>
                    <h3>
                        <group col="3">
                            <field name="code" class="oe_inline" placeholder="Project Code" nolabel="1"/>
                            <span class="oe_inline">-</span>
                            <field name="name" class="oe_inline" placeholder="Project Name" nolabel="1"/>
                        </group>
                    </h3>
                </xpath>
                <xpath expr="//div[@name='options_active']" position="inside">
                    <div>
                        <field name="billable" class="oe_inline"/>
                        <label for="billable"/>
                        <field name="chargeable" class="oe_inline"/>
                        <label for="chargeable"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="tag_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                </xpath>
                <xpath expr="//page" position="after">
                    <page name="invoice_type" string="Invoicing" attrs="{'invisible':[('billable','=',False)]}">
                        <group>
                            <group>
                                <field name="invoice_type" options="{'no_create_edit': True}"/>
                                <field name="invoice_period" options="{'no_create_edit': True}"/>
                                <field name="po_number"/>
                            </group>
                            <group>
                                <field name="expenses"/>
                                <field name="specs_invoice_report"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

